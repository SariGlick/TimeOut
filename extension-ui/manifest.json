{
  "manifest_version": 3,
  "name": "Website Blocker7",
  "version": "1.0",
  "description": "Blocks specified websites on Chrome using manifest v3",
  "permissions": [
    "storage",
    "scripting",
    "webNavigation",
    "tabs",
    "activeTab",
    "windows"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["oops.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
