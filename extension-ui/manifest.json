{
  "manifest_version": 3,
  "name": "Website Blocker7",
  "version": "1.0",
  "description": "Blocks specified websites on Chrome using manifest v3",
  "permissions": [
    "storage",
    "scripting",
    "webNavigation",
    "tabs",
    "activeTab",
    "alarms",
     "notifications"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "images/icon48.png"
},
   "web_accessible_resources": 
   [{"resources": ["oops.html"],
    "matches": ["<all_urls>"]}]
}